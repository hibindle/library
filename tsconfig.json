{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es6",
		"module": "es6",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"lib": ["dom", "es7"],
		"baseUrl": ".",
		"paths": {
			"variables": ["./src/variables/index.ts"],
			"components/*": ["./src/components/*"],
			"illustrations/*": ["./src/illustrations/*"],
			"icons/*": ["./src/icons/*"],
			"Typography": ["./src/Typography/index.tsx"],
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
